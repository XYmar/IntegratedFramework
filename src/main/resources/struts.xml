<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.devMode" value="true"/>
    <constant name="struts.locale" value="zh_CN"/>
    <constant name="struts.i18n.encoding" value="GB2312"/>
    <!--过滤websocket连接。-->
    <constant name="struts.action.excludePattern" value="/notification/.*"/>

    <package name="Orders" namespace="/orders" extends="struts-default">
        <action name="getAllOrders" class="com.rengu.actions.OrdersAction" method="getAllOrders"/>
    </package>


    <package name="default" extends="struts-default" namespace="/">
        <action name="UsersAction" class="com.rengu.actions.UsersAction" method="doLogin">
            <result name="error">/jsps/Login/Login_Fail.jsp</result>
            <result name="success">/jsps/Login/Login_Success.jsp</result>
        </action>
    </package>
</struts>
