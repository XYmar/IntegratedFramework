<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.rengu.entity.RG_LayoutDistanceEntity" table="RG_LayoutDistance" schema="testdatabase">
        <id name="id">
            <column name="id" sql-type="int" not-null="true"/>
            <generator class="identity"/>
        </id>
        <property name="site1">
            <column name="site1" sql-type="varchar(255)"/>
        </property>
        <property name="site2">
            <column name="site2" sql-type="varchar(50)" length="50" not-null="false"/>
        </property>
        <property name="distance">
            <column name="distance" sql-type="varchar(20)" length="20" not-null="false"/>
        </property>
        <property name="time">
            <column name="time" sql-type="varchar(20)" length="20" not-null="false"/>
        </property>
        <property name="type">
            <column name="type" sql-type="varchar(20)" length="20" not-null="false"/>
        </property>
    </class>
</hibernate-mapping>