<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.rengu.entity.RG_ClubEntity" table="RG_Club" schema="testdatabase">
        <id name="id">
            <column name="id" sql-type="varchar(255)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(255)" not-null="false"/>
        </property>

        <!-- lazy设置为false后，在查询club时，会自动抓取对应的user集合，会增加查询语句 -->
        <!-- 如果一方设置inverse=false时，如果在删除以及更新一方信息时，其会先在多方多执行一次更新操作。
        	 如果inverse为false，cascade为all，在删除一方时，会先更新多方与此关联数据，再执行删除操作，总数为N+1条。影响效率
         -->
        <set name="usersById" lazy="false" cascade="save-update,delete">
            <key column="idClub"/>
            <one-to-many class="com.rengu.entity.RG_UserEntity"/>
        </set>
    </class>
</hibernate-mapping>